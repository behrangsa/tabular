{
  "manifest_version": 3,
  "name": "Tabular - Tab Manager",
  "version": "1.0.0",
  "description": "A Chrome extension for managing tabs with IndexedDB storage",
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Tabular - Tab Manager"
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
